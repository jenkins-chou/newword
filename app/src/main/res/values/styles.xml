<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="TranslucentTheme" parent="AppTheme">
        <!--在Android 4.4之前的版本上运行，直接跟随系统主题-->
        <item name="android:windowBackground">@mipmap/welcome_start3</item>
    </style>

    <!---->
    <style name="VideoPlayTheme" parent="AppTheme">
        <!--在Android 4.4之前的版本上运行，直接跟随系统主题-->
        <item name="android:windowBackground">@mipmap/main_bg</item>
    </style>

    <style name="searchEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/search_edittext_bg</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:drawableStart">@mipmap/search_icon</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>

        <item name="android:singleLine">true</item>
        <item name="android:textSize">13sp</item>
        <item name="android:hint">搜索</item>
    </style>

</resources>
