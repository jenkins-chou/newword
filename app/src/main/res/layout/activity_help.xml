<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:fitsSystemWindows="true"
    tools:context="com.jenkins.newworld.activity.HelpActivity">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#fff"
        android:id="@+id/header"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/img_back"
            android:src="@mipmap/common_back_black"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="25dp"
            android:layout_height="25dp" />
        <TextView
            android:text="帮助与反馈"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/login_bg"
            android:text="检查更新"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.jenkins.newworld.ui.RainbowLine
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1sp" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="反馈建议"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:hint="请输入详细描述"
                android:lines="10"
                android:paddingTop="0dp"
                android:background="@drawable/act_login_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:text="提交反馈"
                android:textColor="#fff"
                android:background="@drawable/act_login_submit_btn"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
