<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/guide_selected" />

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/guide_normal" />

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/guide_normal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_bar"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="马上登录"
            android:id="@+id/now_login"
            android:background="@drawable/act_guide_login"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/white" />
        <Button
            android:text="我很傲娇，不登录"
            android:id="@+id/no_login"
            android:background="@drawable/act_guide_nologin"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="#ff6600" />
        <TextView
            android:textColor="#fff"
            android:textSize="10sp"
            android:alpha="0.5"
            android:layout_marginTop="50dp"
            android:text="CopyRight © 2018 jenking.top, all rights reserved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>