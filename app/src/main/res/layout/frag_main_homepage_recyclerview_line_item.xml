<RelativeLayout android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:stateListAnimator="@null"
    android:elevation="3dp"
    android:background="@drawable/frag_share_item_bar"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <org.raphets.roundimageview.RoundImageView
        android:id="@+id/item_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/item_title"
        app:leftBottom_corner_radius="1dp"
        app:leftTop_corner_radius="10dp"
        app:rightBottom_corner_radius="1dp"
        app:rightTop_corner_radius="10dp"
        app:type="round" />
    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/item_tag"
        android:ellipsize="end"
        android:layout_marginTop="2dp"
        android:singleLine="true"
        android:text="title"
        android:textSize="12sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/item_tag"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="tag"
        android:textColor="#ff6600"
        android:textSize="10sp" />
</RelativeLayout>