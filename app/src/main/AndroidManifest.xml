<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.jenkins.newworld">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />

    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon3"
        android:label="@string/app_name_unique"
        android:largeHeap="true"
        android:roundIcon="@mipmap/icon3"
        android:supportsRtl="true"
        android:theme="@style/TranslucentTheme"
        tools:replace="android:icon,android:label">
        <activity
            android:name=".activity.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/TranslucentTheme"></activity>
        <!-- 测试页 -->
        <activity
            android:name=".activity.TestActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/TranslucentTheme" />
        <!-- 视频播放页 -->
        <activity
            android:name=".activity.VideoPlayActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/VideoPlayTheme" />
        <!-- 搜索页面 -->
        <activity
            android:name=".activity.SearchActivity"
            android:theme="@style/TranslucentTheme" />
        <!-- Don't forgot InitActivity -->
        <activity
            android:name="io.vov.vitamio.activity.InitActivity"
            android:configChanges="orientation|screenSize|smallestScreenSize|keyboard|keyboardHidden|navigation"
            android:launchMode="singleTop"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <!-- 直播录制界面 -->
        <activity
            android:name=".activity.LiveRecordActivity"
            android:configChanges="orientation|screenSize|smallestScreenSize|keyboard|keyboardHidden|navigation"
            android:screenOrientation="portrait"
            android:theme="@style/TranslucentTheme" />
        <!-- 直播播放界面 -->
        <activity
            android:name=".activity.LivePlayActivity"
            android:configChanges="orientation|screenSize|smallestScreenSize|keyboard|keyboardHidden|navigation"
            android:screenOrientation="portrait"
            android:theme="@style/TranslucentTheme" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.zz.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- 登录页面 -->
        <activity
            android:name=".activity.LoginActivity"
            android:theme="@style/LoginTheme" />
        <!-- 注册页面 -->
        <activity
            android:name=".activity.RegisterActivity"
            android:theme="@style/LoginTheme" />
        <!-- 个人账户页面 -->
        <activity
            android:name=".activity.AccountActivity"
            android:theme="@style/TranslucentTheme" />
        <activity
            android:name=".activity.GuideActivity"
            android:theme="@style/TranslucentTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>